<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}Welcome!
			{% endblock %}
		</title>
		<link
		rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
		{# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
		{% block stylesheets %}
			{{ encore_entry_link_tags('app') }}
			<link href="{{ asset('css/reset.css') }}" type="text/css" rel="stylesheet"/>
			<link href="{{ asset('css/estilos.css') }}" type="text/css" rel="stylesheet"/>
			<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.2/css/all.min.css" integrity="sha512-1sCRPdkRXhBV2PBLUdRb4tMg1w2YPf37qatUFeS7zlBy7jJI8Lf4VHwWfZZfpXtYSLy85pkm9GaYVYMfw5BC1A==" crossorigin="anonymous" referrerpolicy="no-referrer"/>
			<link type="text/css" rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
			<link rel="preconnect" href="https://fonts.googleapis.com">
			<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
			<link href="https://fonts.googleapis.com/css2?family=Roboto&display=swap" rel="stylesheet">
		{% endblock %}

		{% block javascripts %}
			{{ encore_entry_script_tags('app') }}
		{% endblock %}
	</head>
	<body>
		{% block body %}
			<header>
				<div id="cabera_nivel_0">
					<div class="centrado">
						<nav>
							<ul>
								<li>
									<a href="#">Contactenos ahora</a>
								</li>
								<li>
									|
								</li>
								<li>
									<a href="#">Faq</a>
								</li>
								<li>
									|
								</li>
								<li>
									<a href="#">Blog</a>
								</li>
							</ul>
						</nav>
						<div>
							<i class="fa-solid fa-truck-fast"></i>
							Envios gratuito en pedidos superiores a 35€
						</div>
						<nav>
							<ul>
								<li>
									<a href="#">Identificarse</a>
								</li>
								<li>
									|
								</li>
								<li>
									<i class="fa-solid fa-user"></i>&nbsp;&nbsp;<a href="#">Crear Cuenta</a>
								</li>
							</ul>
						</nav>
					</div>
				</div>
				<div id="cabera_nivel_1">
					<div class="centrado">
						<figure id="logo">
							<img src="{{ asset('logo.png')}}" alt="logo"/>
						</figure>
						<form>
							<select class="cmb">
								<option>Categorias</option>
							</select>
							<input class="txt" type="search" name="buscar" placeholder="Introduce la busqueda"/>
							<input class="btn_naranja" type="submit" name="enviar" value="Buscar"/>
						</form>
						<img src="{{ asset('contacto.png')}}" alt="Info contacto"/>
						<div>
							<div>
								<i class="fa-solid fa-basket-shopping"></i>
								<div>
									<span>0</span>
								</div>
							</div>
							<div>
								<p>Mi Cesta</p>
								<p>0,00 €</p>
							</div>
						</div>
					</div>
				</div>
				<div id="cabera_nivel_2">
					<div class="centrado">
						<nav>
							<ul>
								<li><a href="http://127.0.0.1:8000/">Inicio</a></li>
								<li><a href="http://127.0.0.1:8000/productos/alta">Formulario</a></li>
								<li><a href="http://127.0.0.1:8000/productos/todos">Añadidos</a></li>
							</ul>
						</nav>
						<nav>
							<ul>
								<li><a href="#"><i class="fa-brands fa-facebook"></i></a></li>
								<li><a href="#"><i class="fa-brands fa-twitter"></i></a></li>
							</ul>
						</nav>
					</div>
				</div>
			</header>
		{% endblock %}
		<div class="centrado">
			{% block cuerpo %}
				<section id="portada">
					{% for producto in productos %}
						<article>
							<header>
								<figure>
									<img src="{{asset(producto.fotoportada)}}"/>
								</figure>
								<h1>
									<a href="#">{{producto.titulo}}</a>
								</h1>
							</header>
							<p>{{producto.precio}}</p>
						</article>
					{% endfor %}
				</section>
			{% endblock %}
		</div>
		{% block pie %}
			<footer>
				<footer class="page-footer font-small special-color-dark pt-4">
					<div class="container">
						<div class="row">
							<div class="col-md-6 mb-4">
								<form class="form-inline">
									<input class="form-control form-control-sm mr-3 w-75" type="text" placeholder="Search" aria-label="Search">
									<i class="fas fa-search" aria-hidden="true"></i>
								</form>
							</div>
							<div class="col-md-6 mb-4">
								<form class="input-group">
									<input type="text" class="form-control form-control-sm" placeholder="Your email" aria-label="Your email" aria-describedby="basic-addon2">
									<div class="input-group-append">
										<button class="btn btn-sm btn-outline-white my-0" type="button">Sign up</button>
									</div>
								</form>
							</div>
						</div>
					</div>
					<div class="footer-copyright text-center py-3">© 2022 Copyright:
						<a href="/">TiendaFeliz.com</a>
					</div>
				</footer>
			{% endblock %}
		</body>
	</body>
</html>
